{
  "compilerOptions": {
    "allowUnreachableCode": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "target": "es2020",
    "sourceRoot": ".",
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "preserve",
    "typeRoots": ["src/@types"],
    "lib": ["es2018", "dom", "esnext.asynciterable"],
    "types": [
      "jasmine",
      "jasmine-matchers",
      "webcomponents.js",
      "webfun-additions",
      "json",
      "text-encoding",
      "webfun-tests",
      "detect-mobile-browser"
    ]
  },
  "exclude": ["node_modules"],
}
