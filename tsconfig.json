{
  "compilerOptions": {
    "allowUnreachableCode": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "allowJs": true,
    "target": "es2015",
    "sourceRoot": ".",
    "baseUrl": ".",
    "rootDir": ".",
    "typeRoots": [
      "src/@types"
    ],
    "lib": [
      "es2015",
      "dom",
      "es6",
      "es2015.promise"
    ],
    "types": [
      "jasmine",
      "jasmine-matchers",
      "webcomponents.js",
      "webfun-additions"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "cacheDirectory": "./config/.typescript"
  }
}
