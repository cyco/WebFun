{
	"compilerOptions": {
		"allowUnreachableCode": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"experimentalDecorators": true,
		"sourceMap": false,
		"inlineSourceMap": true,
		"inlineSources": true,
		"target": "es2017",
		"sourceRoot": ".",
		"baseUrl": ".",
		"rootDir": ".",
		"jsx": "preserve",
		"typeRoots": ["src/@types"],
		"lib": ["es2018", "dom", "esnext.asynciterable"],
		"types": ["jasmine", "webcomponents.js", "webfun-additions", "json", "text-encoding"]
	},
	"exclude": ["node_modules", "test"],
	"include": ["src"]
}