{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "allowJs": true,
    "target": "es2015",
    "sourceRoot": "./",
    "baseUrl": ".",
    "rootDir": ".",
    "typeRoots": [
      "src/@types"
    ],
    "lib": [
      "es2015", "dom", "es6"
    ],
    "types": [
      "jasmine",
      "jasmine-matchers",
      "webfun-additions",
      "webcomponents.js"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "cacheDirectory": "./config/.typescript"
  }
}
