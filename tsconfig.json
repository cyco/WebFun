{
  "compilerOptions": {
    "allowUnreachableCode": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "allowJs": true,
    "target": "es2015",
    "sourceRoot": ".",
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "preserve",
    "typeRoots": ["src/@types"],
    "lib": ["es2015", "dom", "es6", "es2015.promise"],
    "types": ["jasmine", "jasmine-matchers", "webcomponents.js", "webfun-additions"]
  },
  "exclude": ["node_modules"],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "cacheDirectory": "./config/.typescript"
  }
}
