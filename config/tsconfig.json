{
  "compilerOptions": {
    "allowUnreachableCode": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "allowJs": true,
    "jsx": "preserve",
    "target": "es2015",
    "sourceRoot": "../",
    "baseUrl": "../",
    "rootDir": "../",
    "typeRoots": ["../src/@types"],
    "lib": ["es2015", "dom", "es6", "es2015.promise"],
    "types": ["jasmine", "jasmine-matchers", "webcomponents.js", "webfun-additions"]
  },
  "files": ["src/extension/index.ts"],
  "include": ["src/**/*.{ts,tsx}"],
  "exclude": ["node_modules"],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "cacheDirectory": "./config/.typescript"
  }
}
