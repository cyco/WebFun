{
  "name": "WebFun",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "webpack --config config/webpack.dev.dev.js",
    "build:prod": "webpack --optimize-minimize --config config/webpack.prod.js --progress",
    "build:cont": "webpack --config config/webpack.dev.js --watch",
    "start": "webpack-dev-server --config config/webpack.dev.js",
    "test": "karma start config/karma.conf.js --single-run",
    "test:cont": "karma start config/karma.conf.js --watch --singler-run=false",
    "test:cov": "cross-env coverage=1 karma start config/karma.conf.js --single-run=true",
    "test:cov:cont":
      "cross-env coverage=1 karma start config/karma.conf.js --watch --singler-run=false",
    "test:cont:cov":
      "cross-env coverage=1 karma start config/karma.conf.js --watch --singler-run=false",
    "test:acceptance":
      "cross-env scope=acceptance karma start config/karma.conf.js --single-run --",
    "test:unit": "cross-env coverage=1 scope=unit karma start config/karma.conf.js --single-run",
    "test:coverage":
      "cross-env coverage=1 scope=unit,acceptance,performance karma start config/karma.conf.js --single-run",
    "test:unit:cont": "cross-env coverage=1 scope=unit karma start config/karma.conf.js",
    "test:full":
      "cross-env coverage=1 scope=unit,acceptance,performance karma start config/karma.conf.js",
    "test:full:cont":
      "cross-env coverage=1 scope=unit,acceptance,performance karma start config/karma.conf.js --watch=true --single-run=false",
    "test:gameplay":
      "cross-env TOOL_NAME=gameplay yarn build-tool && node tools/bin/gameplay.bin.js",
    "test:dump-scripts":
      "cross-env TOOL_NAME=dump-scripts yarn build-tool && node tools/bin/dump-scripts.bin.js -d \"build/game-data/yoda.data\"",
    "test:dump-data":
      "cross-env TOOL_NAME=dump-data yarn build-tool && node tools/bin/dump-data.bin.js -d \"build/game-data/yoda.data\"",
    "gen-coverage":
      "genhtml test/coverage/unit.lcov test/coverage/acceptance/lcov.info -o test/coverage/html",
    "test:performance": "cross-env scope=performance karma start karma.conf.js --single-run",
    "world": "node -- tools/bin/generate-world.bin.js -v -d \"build/game-data/yoda.data\"",
    "world:validate":
      "node -- tools/bin/generate-world.bin.js -c -d \"build/game-data/yoda.data\" -e \"game-data/worlds.txt\"",
    "world:validate:all":
      "node -- tools/bin/generate-world.bin.js -c -d \"./build/game-data/yoda.data\" -e \"./game-data/full.txt\" -a",
    "build-tool": "webpack --config config/webpack.tool.js",
    "build-tool:cont": "webpack --progress --config config/webpack.tool.js --watch",
    "format": "prettier --write '{src,config,docs,test,tools}/**/*.{ts,tsx,jsx,js,json,scss}'",
    "precommit": "pretty-quick --staged"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current",
            "browsers": ["last 1 version"]
          }
        }
      ]
    ],
    "plugins": [
      "@babel/transform-regenerator",
      [
        "@babel/plugin-transform-react-jsx",
        {
          "pragma": "WebFunJSX.render"
        }
      ]
    ]
  },
  "prettier": {
    "tabWidth": 4,
    "useTabs": true,
    "printWidth": 100,
    "overrides": [
      {
        "files": ["**/*.json"],
        "options": {
          "tabWidth": 2,
          "useTabs": false
        }
      }
    ]
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.46",
    "@babel/runtime": "^7.0.0-beta.46"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-transform-react-jsx": "^7.0.0-beta.46",
    "@babel/plugin-transform-regenerator": "^7.0.0-beta.46",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@types/jasmine": "^2.8.6",
    "@types/jasmine-matchers": "^0.2.30",
    "@types/text-encoding": "^0.0.32",
    "@types/webcomponents.js": "^0.6.32",
    "add-matchers": "^0.5.0",
    "awesome-typescript-loader": "5.0.0",
    "babel-loader": "8.0.0-beta.0",
    "babel-plugin-istanbul": "^4.1.6",
    "canvas": "^1.6.10",
    "cross-env": "^5.1.5",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.10",
    "font-loader": "^0.1.2",
    "husky": "^0.14.3",
    "ignore-loader": "^0.1.2",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jasmine-core": "^3.1.0",
    "jsdom": "^11.10.0",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-coverage-istanbul-reporter": "^1.4.1",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "^1.1.1",
    "karma-jasmine-matchers": "^3.7.0",
    "karma-junit-reporter": "^1.2.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.0",
    "node-sass": "4.8.3",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "prettier": "^1.12.1",
    "pretty-quick": "^1.4.1",
    "puppeteer": "^1.4.0",
    "raw-loader": "^0.5.1",
    "sass-loader": "6.0.6",
    "shelljs": "^0.8.2",
    "style-loader": "^0.21.0",
    "tslint": "^5.10.0",
    "typescript": "^2.7.2",
    "url-loader": "^1.0.1",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.3",
    "webpack-merge": "^4.1.2",
    "webpack-node-externals": "^1.7.2"
  }
}
